<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Se o arquivo/diret처rio n찾o existir na raiz, redireciona para public
    RewriteCond %{DOCUMENT_ROOT}/public/$1 -f [OR]
    RewriteCond %{DOCUMENT_ROOT}/public/$1 -d
    RewriteRule ^(.*)$ public/$1 [L]
    
    # Se nada for encontrado, redireciona para o index.html em public
    RewriteRule ^$ public/index.html [L]
</IfModule>

# Definir index padr찾o
DirectoryIndex public/index.html

# Permitir acesso ao diret처rio
<Directory "/public_html/public">
    Options Indexes FollowSymLinks
    AllowOverride All
    Require all granted
</Directory>